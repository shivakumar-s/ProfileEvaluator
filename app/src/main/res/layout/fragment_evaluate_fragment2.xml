<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cvcrop.profileevaluator.EvaluateFragment2"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/peInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill in to evaluate your Profile"


        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="154dp" />

    <TextView
        android:id="@+id/desire_scores_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores and Desires"
        android:textColor="#000"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="356dp"
        android:layout_height="298dp"
        android:background="@drawable/my_custom_background"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.324">

        <TextView
            android:id="@+id/desired_course_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Current Degree"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/desired_course_atext"
            android:layout_width="142dp"
            android:layout_height="32dp"

            app:layout_constraintLeft_toLeftOf="@+id/desired_course_text"
            app:layout_constraintTop_toBottomOf="@+id/desired_course_text" />


        <TextView
            android:id="@+id/desired_major_text"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="Desired Major"

            app:layout_constraintTop_toTopOf="@+id/desired_course_text"
            app:layout_constraintLeft_toRightOf="@+id/desired_course_text"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/desired_major_atext"
            android:layout_width="139dp"
            android:layout_height="32dp"
            app:layout_constraintLeft_toLeftOf="@+id/desired_major_text"
            app:layout_constraintTop_toBottomOf="@+id/desired_major_text" />

        <TextView
            android:id="@+id/admission_cycle_text"
            android:layout_width="148dp"
            android:layout_height="25dp"
            android:text="Admission Cycle"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/desired_course_atext"
            android:layout_marginStart="16dp" />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:id="@+id/admission_cycle_atext"
            android:layout_width="150dp"
            android:layout_height="30dp"

            app:layout_constraintLeft_toLeftOf="@+id/admission_cycle_text"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/admission_cycle_text" />

        <TextView
            android:id="@+id/desired_state_text"
            android:layout_width="109dp"
            android:layout_height="22dp"
            android:text="Desired state?"

            app:layout_constraintLeft_toLeftOf="@+id/desired_major_atext"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/desired_major_atext" />

        <AutoCompleteTextView
            android:id="@+id/desired_state_atext"
            android:layout_width="160dp"
            android:layout_height="28dp"
            android:layout_marginTop="3dp"
            app:layout_constraintLeft_toLeftOf="@+id/desired_state_text"
            app:layout_constraintTop_toBottomOf="@+id/desired_state_text" />

        <EditText
            android:id="@+id/gre_score"
            android:layout_width="112dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintLeft_toLeftOf="@+id/gre_text"
            app:layout_constraintTop_toBottomOf="@+id/gre_text" />

        <TextView
            android:id="@+id/gre_text"
            android:layout_width="159dp"
            android:layout_height="30dp"
            android:text="GRE score? if not taken enter expected"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/admission_cycle_atext" />

        <TextView
            android:id="@+id/english_type_text"
            android:layout_width="142dp"
            android:layout_height="27dp"

            android:layout_marginTop="11dp"
            android:text="English test type?"
            app:layout_constraintLeft_toLeftOf="@+id/desired_state_atext"
            app:layout_constraintTop_toBottomOf="@+id/desired_state_atext" />

        <EditText
            android:id="@+id/course_budget"
            android:layout_width="143dp"
            android:layout_height="32dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_marginLeft="-4dp"
            app:layout_constraintLeft_toLeftOf="@+id/budget_text"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/budget_text" />

        <TextView
            android:id="@+id/english_text"
            android:layout_width="111dp"
            android:layout_height="22dp"
            android:layout_marginLeft="0dp"

            android:layout_marginTop="8dp"
            android:text="English Score"
            app:layout_constraintLeft_toLeftOf="@+id/gre_score"
            app:layout_constraintTop_toBottomOf="@+id/gre_score" />

        <EditText
            android:id="@+id/english_score"
            android:layout_width="129dp"
            android:layout_height="38dp"
            android:ems="10"
            android:inputType="number"

            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/english_text"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/english_text" />

        <TextView
            android:id="@+id/budget_text"
            android:layout_width="156dp"
            android:layout_height="31dp"

            android:text="Course Budget for 2 years"
            android:layout_marginLeft="-5dp"
            app:layout_constraintLeft_toLeftOf="@+id/english_test_type"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/english_test_type" />

        <EditText
            android:id="@+id/experience"
            android:layout_width="129dp"
            android:layout_height="29dp"
            android:ems="10"
            android:inputType="number"
            tools:layout_editor_absoluteY="379dp"
            tools:layout_editor_absoluteX="47dp" />

        <Spinner
            android:id="@+id/english_test_type"
            android:layout_width="133dp"
            android:layout_height="26dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/english_type_text"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/english_type_text" />


    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/evaluate_button"
        android:layout_width="91dp"
        android:layout_height="35dp"
        android:elevation="4dp"
        android:text="Evaluate"
        android:layout_marginRight="29dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:text="Back"
        android:layout_marginLeft="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


</android.support.constraint.ConstraintLayout>
